<BorderPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <BorderPane BorderPane.alignment="CENTER">
         <left>
            <Label text="My Application" BorderPane.alignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </left>
         <center>
            <HBox alignment="CENTER_RIGHT" spacing="15.0" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" text="Nuevo" />
                  <TextField promptText="Buscar" />
                  <MenuButton mnemonicParsing="false" text="Opciones">
                    <items>
                      <MenuItem mnemonicParsing="false" text="Action 1" />
                      <MenuItem mnemonicParsing="false" text="Action 2" />
                    </items>
                  </MenuButton>
               </children>
            </HBox>
         </center>
      </BorderPane>
   </top>
   <padding>
      <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
   </padding>
   <center>
      <TableView BorderPane.alignment="CENTER">
        <columns>
          <TableColumn prefWidth="75.0" resizable="false" text="C1" />
          <TableColumn prefWidth="75.0" resizable="false" text="C2" />
            <TableColumn prefWidth="75.0" resizable="false" text="Column X" />
            <TableColumn prefWidth="75.0" resizable="false" text="Column X" />
            <TableColumn prefWidth="75.0" resizable="false" text="Column X" />
        </columns>
         <BorderPane.margin>
